<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="2000.0" minWidth="2000.0"
  prefHeight="2000.0" prefWidth="2000.0" stylesheets="/io/github/dranreb22/productLine.css"
  xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
  fx:controller="io.github.dranreb22.ProductionTabController">
  <columnConstraints>
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
  </columnConstraints>
  <rowConstraints>
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
  </rowConstraints>
  <children>
    <TabPane prefHeight="267.0" prefWidth="342.0" tabClosingPolicy="UNAVAILABLE"
      GridPane.columnSpan="2" GridPane.rowSpan="3">
      <tabs>
        <Tab text="Product Line">
          <content>
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="390.0" prefWidth="200.0">
              <children>
                <Label layoutX="15.0" layoutY="15.0" text="Product Name"/>
                <TextField fx:id="txt_productName" layoutX="119.0" layoutY="11.0"/>
                <Label layoutX="17.0" layoutY="54.0" text="Manufacturer"/>
                <TextField fx:id="txt_manufacturer" layoutX="119.0" layoutY="50.0"/>
                <Label layoutX="17.0" layoutY="106.0" text="Item Type"/>
                <Button layoutX="119.0" layoutY="135.0" mnemonicParsing="false"
                  onMouseClicked="#addProductClicked" text="Add Product"/>
                <TableView layoutX="118.0" layoutY="171.0" prefHeight="199.0" prefWidth="200.0">
                  <columns>
                    <TableColumn prefWidth="75.0" text="C1"/>
                    <TableColumn prefWidth="75.0" text="C2"/>
                  </columns>
                </TableView>
                <Label layoutX="15.0" layoutY="262.0" text="Existing Products"/>
                <ChoiceBox fx:id="chb_itemType" layoutX="119.0" layoutY="102.0" prefWidth="150.0"/>
              </children>
            </AnchorPane>
          </content>
        </Tab>
        <Tab text="Produce">
          <content>
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
              <children>
                <Label layoutX="34.0" layoutY="49.0" text="Choose Product"/>
                <ListView layoutX="162.0" layoutY="9.0" prefHeight="114.0" prefWidth="200.0"/>
                <Label layoutX="32.0" layoutY="167.0" text="Choose Quantity"/>
                <ComboBox fx:id="cmb_quantity" editable="true" layoutX="162.0" layoutY="163.0"
                  prefHeight="25.0" prefWidth="204.0"/>
                <Button layoutX="162.0" layoutY="235.0" mnemonicParsing="false"
                  text="Record Production"/>
              </children>
            </AnchorPane>
          </content>
        </Tab>
        <Tab text="Production Log">
          <content>
            <AnchorPane minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
              <children>
                <BorderPane layoutX="-10.0" prefHeight="371.0" prefWidth="200.0"
                  AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                  AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                  <center>
                    <TextArea fx:id="textArea" editable="false" prefHeight="227.0" prefWidth="200.0"
                      BorderPane.alignment="CENTER"/>
                  </center>
                </BorderPane>
              </children>
            </AnchorPane>
          </content>
        </Tab>
      </tabs>
    </TabPane>
  </children>
  <!--<stylesheets> this is done in the gridpane declaration
    <URL value="@productLine.css" />
  </stylesheets> -->
</GridPane>
